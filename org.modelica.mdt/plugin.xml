<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.0"?>
<plugin>
   <extension-point id="compiler" name="Modelica Compiler" schema="schema/compiler.exsd"/>
 
   <extension
         id="ModelicaNature"
         name="Modelica"
         point="org.eclipse.core.resources.natures">
      <runtime>
         <run class="org.modelica.mdt.ModelicaNature"/>
      </runtime>
      <builder id="org.modelica.mdt.syntaxChecker"/>
   </extension>
   
   <extension
   		id="syntaxChecker"
   		name="Modelica Builder"
   		point="org.eclipse.core.resources.builders">
   		<builder hasNature="true">
   			<run
   				class="org.modelica.mdt.builder.SyntaxChecker">
   				<parameter
             name="comment"
             value="Builder Comment"/>
   			</run>
   		</builder>
   	</extension>
</plugin>
