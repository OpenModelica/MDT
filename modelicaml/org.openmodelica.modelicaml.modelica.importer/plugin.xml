<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>

   <extension
         point="org.eclipse.ui.views">
      <view
            name="Modelica Models"
            icon="icons/code.png"
            category="org.openmodelica.modelicaml.gen.modelica.category1"
            class="org.openmodelica.modelicaml.modelica.importer.views.ModelicaOMCCodeViewer"
            id="org.openmodelica.modelicaml.modelica.importer.views.ModelicaOMCCodeViewer">
      </view>
   </extension>
   <extension
         point="org.eclipse.ui.perspectiveExtensions">
      <perspectiveExtension
            targetID="org.eclipse.jdt.ui.JavaPerspective">
         <view
               ratio="0.5"
               relative="org.eclipse.ui.views.TaskList"
               relationship="right"
               id="org.openmodelica.modelicaml.modelica.importer.views.ModelicaOMCCodeViewer">
         </view>
      </perspectiveExtension>
   </extension>
   <extension
         point="org.eclipse.help.contexts">
      <contexts
            file="contexts.xml">
      </contexts>
   </extension>
   <extension
         id="org.openmodelica.modelicaml.modelicamlMarker.modelicamlproxies"
         name="Modelica Model Proxies Synchronization"
         point="org.eclipse.core.resources.markers">
      <super
            type="org.eclipse.emf.ecore.diagnostic">
      </super>
      <super
            type="org.eclipse.core.resources.marker">
      </super>
      <persistent
            value="false">
      </persistent>
      <attribute
            name="generatedBy">
      </attribute>
   </extension>
   <extension
         id="org.openmodelica.modelicaml.modelicamlMarker.modelicaloading"
         name="OMC Modelica Models Loading"
         point="org.eclipse.core.resources.markers">
      <super
            type="org.eclipse.core.resources.marker">
      </super>
      <persistent
            value="false">
      </persistent>
      <attribute
            name="generatedBy">
      </attribute>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            allPopups="false"
            locationURI="toolbar:org.eclipse.ui.main.toolbar">
         <toolbar
               id="org.openmodelica.modelicaml.modelica.toolbar"
               label="ModelicaML Modelica">
            <separator
                  name="org.openmodelica.modelicaml.modelica.importer.separator3">
            </separator>
            <command
                  commandId="org.openmodelica.modelicaml.modelica.commands.synchronizemodelicamodelproxies"
                  icon="icons/code.png"
                  label="Synchronize Modelica Model Proxies"
                  style="push"
                  tooltip="Synchronize Modelica Model Proxies">
               <visibleWhen>
                  <with
                        variable="activeEditorId">
                     <equals
                           value="org.eclipse.papyrus.core.papyrusEditor">
                     </equals>
                  </with>
               </visibleWhen>
            </command>
            <visibleWhen
                  checkEnabled="false">
               <with
                     variable="activeWorkbenchWindow.activePerspective">
                  <equals
                        value="org.openmodelica.modelicaml.perspective">
                  </equals>
               </with>
            </visibleWhen>
         </toolbar>
      </menuContribution>
   </extension>
   <extension
         point="org.eclipse.ui.commands">
      <command
            id="org.openmodelica.modelicaml.modelica.commands.synchronizemodelicamodelproxies"
            name="Synchronize Modelica Model Proxies">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            class="org.openmodelica.modelicaml.modelica.importer.handlers.SynchronizeModelicaModelProxiesHandler"
            commandId="org.openmodelica.modelicaml.modelica.commands.synchronizemodelicamodelproxies">
      </handler>
   </extension>

</plugin>
