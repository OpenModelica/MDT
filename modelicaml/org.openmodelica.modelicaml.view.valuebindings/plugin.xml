<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>

   <extension
         point="org.eclipse.ui.views">
      <category
            id="org.openmodelica.modelicaml.view.valuebindings"
            name="Value Bindings"
            parentCategory="org.openmodelica.modelicaml.gen.modelica.category1">
      </category>
      <view
            allowMultiple="false"
            category="org.openmodelica.modelicaml.gen.modelica.category1"
            class="org.openmodelica.modelicaml.view.valuebindings.views.ValueBindingsView"
            icon="icons/valueMediator.png"
            id="org.openmodelica.modelicaml.view.valuebindings.views.ValueBindingsView"
            name="Value Bindings">
      </view>
   </extension>
   <extension
         point="org.eclipse.ui.perspectiveExtensions">
      <perspectiveExtension
            targetID="org.openmodelica.modelicaml.perspective">
         <view
               ratio="0.5"
               relative="org.eclipse.ui.views.TaskList"
               relationship="right"
               id="org.openmodelica.modelicaml.view.valuebindings.views.ValueBindingsView">
         </view>
      </perspectiveExtension>
   </extension>
   <extension
         point="org.eclipse.help.contexts">
      <contexts
            file="contexts.xml">
      </contexts>
   </extension>
   <extension
         point="org.eclipse.papyrus.core.modelListener">
      <listener
            name="org.openmodelica.modelicaml.view.valuebindings.listener1"
            realization="org.openmodelica.modelicaml.view.valuebindings.listeners.PapyrusListener">
      </listener>
   </extension>
   
   <extension
         point="org.eclipse.ui.views.properties.tabbed.propertyContributor">
      <propertyContributor
            contributorId="org.openmodelica.modelicaml.view.valuebindings.views.ValueBindingsView"
            labelProvider="org.openmodelica.modelicaml.view.valuebindings.sections.DetailLabelProvider">
         <propertyCategory
               category="org.eclipse.papyrus.modelicaml"></propertyCategory>
      </propertyContributor>
   </extension>
   <extension
         point="org.eclipse.ui.views.properties.tabbed.propertyTabs">
      <propertyTabs
            contributorId="org.openmodelica.modelicaml.view.valuebindings.views.ValueBindingsView">
         <propertyTab
               afterTab="org.openmodelica.modelicaml.view.valuebindings.properties.tab.modelicaml"
               category="org.eclipse.papyrus.modelicaml"
               id="org.openmodelica.modelicaml.view.valuebindings.properties.tab.details"
               indented="true"
               label="Details">
         </propertyTab>
      </propertyTabs>
   </extension>
   <extension
         point="org.eclipse.ui.views.properties.tabbed.propertySections">
      <propertySections
            contributorId="org.openmodelica.modelicaml.view.valuebindings.views.ValueBindingsView">
         <propertySection
               class="org.openmodelica.modelicaml.view.valuebindings.sections.PropertySectionDetails"
               id="org.openmodelica.modelicaml.view.valuebindings.propertySection.details"
               tab="org.openmodelica.modelicaml.view.valuebindings.properties.tab.details">
            <input
                  type="org.openmodelica.modelicaml.view.valuebindings.model.TreeObject">
            </input>
         </propertySection>
      </propertySections>
   </extension>

</plugin>
